{% extends 'AppBundle::layout.html.twig' %}

{% block main_content %}
    <div class="row box-breadcrumb">
        <div class="btn-group btn-breadcrumb">
            <a href="#" class="btn btn-default"><i class="glyphicon glyphicon-home"></i></a>
            <a href="#" class="btn btn-default">Trang Chủ</a>
            <a href="#" class="btn btn-default">Danh Mục Sản Phẩm</a>
            <a href="#" class="btn btn-default">Chi Tiết Sản Phẩm</a>
            <a href="#" class="btn btn-default">{{ item.name }}</a>
        </div>
    </div>
    <div class="row product-info">
        {% if(item.old == true) %}
            <div class="col-sm-4">
                <div class="product-image zoom" id="productFex">
                    <img src="{{ item.image }}" alt="{{ item.name }}" class="img-thumbnail img-responsive">
                </div>
                <div class="clearfix"></div>
                <div id="gallery_01">
                    {% if(oldGallery|length > 0) %}
                        {% for g in oldGallery %}
                            <a href="javascript:;" data-image="http://deprangngoi.vn/{{ g.image }}" data-zoom-image="http://deprangngoi.vn/{{ g.image }}">
                                <img id="img_01" src="http://deprangngoi.vn/{{ g.image }}" title="OK MEN.png" alt="{{ g.title }}" width="90">
                            </a>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        {% endif %}
        <div class="col-sm-5">
            <h4 class="title-detail">{{ item.name }}</h4>

            <div class="socical">
                <!-- AddThis Button BEGIN -->
                <div class="addthis_toolbox addthis_default_style addthis_16x16_style">
                    <a class="addthis_button_facebook"></a>
                    <a class="addthis_button_twitter"></a>
                    <a class="addthis_button_zingme"></a>
                    <a class="addthis_button_google_plusone_share"></a>
                    <a class="addthis_button_compact"></a><a class="addthis_counter addthis_bubble_style"></a>
                </div>
            </div>
            <hr>
            <div class="product-detail">
                <p><strong>Mã sản phẩm:</strong> <span>{{ item.productCode }}</span></p>

                <p><strong>Xuất xứ: </strong><span> {{ item.madeIn }}</span></p>

                <p><strong>Thương hiệu:</strong> <span>{{ item.trademark }}</span></p>

                <p><strong>Loại sản phẩm:</strong> <span>{{ item.typeName }}</span></p>

                <p><strong>Trọng lượng:</strong> <span> {{ item.weights }}</span></p>

                <p><strong>Quy cách: </strong><span> {{ item.specification }}</span></p>
            </div>
            <span class="product_price">{{ item.price|number_format(0, '.', ',') }} VND</span>
            <span class="product_price_old">{{ item.priceOld|number_format(0, '.', ',') }} VND</span>
            <br>
            <br>

            <form action="{{ path('app_product_card') }}" id="ProductAddForm" method="post" accept-charset="utf-8">
                <div style="display:none;"><input type="hidden" name="_method" value="POST"></div>
                <input type="hidden" name="data[Product][id]" value="2" id="ProductId">

                <button class="btn btn-success addtocart" id="2"
                        onclick="window.location.href='{{ path('app_product_card') }}'" type="submit"><i
                            class="fa fa-cart-plus"></i> &nbsp;
                    Thêm vào giỏ hàng
                </button>
            </form>
            <br>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div id="fb-root"></div>
            <div class="fb-like fb_iframe_widget"
                 data-href="/kem-tri-mun-tham-lien-seo/kem-mun--xoa-tham--lien-seo--phuc-hoi-da-x2"
                 data-layout="standard" data-action="like" data-show-faces="true" data-share="true" data-width="100%"
                 fb-xfbml-state="rendered"
                 fb-iframe-plugin-query="action=like&amp;app_id=&amp;container_width=700&amp;href=http%3A%2F%2Fdeprangngoi.vn%2Fkem-tri-mun-tham-lien-seo%2Fkem-mun--xoa-tham--lien-seo--phuc-hoi-da-x2&amp;layout=standard&amp;locale=vi_VN&amp;sdk=joey&amp;share=true&amp;show_faces=true&amp;width=100%25">
                <span style="vertical-align: top; width: 0px; height: 0px; overflow: hidden;"><iframe
                            name="f14a8ebb7a498dc" height="1000px" frameborder="0" allowtransparency="true"
                            allowfullscreen="true" scrolling="no" title="fb:like Facebook Social Plugin"
                            src="https://www.facebook.com/v2.0/plugins/like.php?action=like&amp;app_id=&amp;channel=http%3A%2F%2Fstaticxx.facebook.com%2Fconnect%2Fxd_arbiter%2Fr%2FfTmIQU3LxvB.js%3Fversion%3D42%23cb%3Df310d9c463f2ac%26domain%3Ddeprangngoi.vn%26origin%3Dhttp%253A%252F%252Fdeprangngoi.vn%252Ff14243d3a4524%26relation%3Dparent.parent&amp;container_width=700&amp;href=http%3A%2F%2Fdeprangngoi.vn%2Fkem-tri-mun-tham-lien-seo%2Fkem-mun--xoa-tham--lien-seo--phuc-hoi-da-x2&amp;layout=standard&amp;locale=vi_VN&amp;sdk=joey&amp;share=true&amp;show_faces=true&amp;width=100%25"
                            style="border: none; visibility: visible; width: 0px; height: 0px;"></iframe></span></div>
            <div class="post-content">
                {{ item.body|raw }}
            </div>
            <div class="fb-comments" data-href="https://developers.facebook.com/docs/plugins/comments#configurator"
                 data-width="100%" data-numposts="2"></div>
        </div>
    </div>
    <div class="row box-category">
        <div class="col-md-12 boder-box">
            <h3 class="title-category">Sản Phẩm Tương Tự</h3>
            <br>

            <div class="row row-list-item">
                <div id="products-1" class="row list-group">
                    {% for item in productLike %}
                        <div class="item  col-xs-12 col-lg-4">
                            <div class="thumbnail">
                                <img class="group list-group-image img-responsive" data-toggle="tooltip"
                                     data-placement="top"
                                     src="{{ item.image }}" alt=""/>

                                <div class="caption">
                                    <a href="{{ path('app_product_detail',{'slug':item.alias }) }}"
                                       title="{{ item.name }}"><h4
                                                class="text-left product-title">{{ item.name }}</h4>
                                    </a>

                                    <p class="group inner list-group-item-text product-description">
                                        {% if(item.description|length > 0) %}
                                            {{ item.description }}
                                        {% else %}
                                            {{ characterLimit(item.body,225)|striptags  }}
                                        {% endif %}
                                    </p>
                                    <div class="row price">
                                        <div class="col-xs-12 col-md-6">
                                        <span class="lead">
                                            {{ item.price|number_format(0, '.', ',') }} VND</span>
                                                <span class="lead-old">
                                            {{ item.priceOld|number_format(0, '.', ',') }} VND</span>
                                        </div>
                                        <div class="col-xs-12 col-md-6">
                                            <a class="btn btn-detail"
                                               href="{{ path('app_product_detail',{'slug':item.alias }) }}">Xem Thêm</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#productFex').zoom();
        });
    </script>
    <script type="text/javascript"
            src="http://s7.addthis.com/js/300/addthis_widget.js#pubid=xa-521230bf3fea4b8e"></script>
    <script>(function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s);
            js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.8&appId=425450817599085";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
{% endblock %}
